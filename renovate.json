{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": ["**/*.yaml", "**/*.yml" ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes",
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "matchFileNames": [
        "apps/**",
        "clusters/**",
        "infra/**",
        "controllers/**"
      ],
      "groupName": "k8s-manifests",
      "commitMessageTopic": "k8s manifests"
    }
  ],
  "ignorePaths": [
    "**/*.sops.yaml",
    ".sops.yaml"
  ]
}
