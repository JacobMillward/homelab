{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "kubernetes",
    "github-actions",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/).*\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s(?<depName>\\S+?)(?::(?<currentValue>\\S+))?$",
        "image:\\s?\"(?<depName>\\S+?):(?<currentValue>\\S+?)\"",
        "image:\\s?'(?<depName>\\S+?):(?<currentValue>\\S+?)'"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes",
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "matchFileNames": [
        "apps/**",
        "clusters/**",
        "infra/**",
        "controllers/**"
      ],
      "groupName": "k8s-manifests",
      "commitMessageTopic": "k8s manifests"
    }
  ],
  "ignorePaths": [
    "**/*.sops.yaml",
    ".sops.yaml"
  ]
}
